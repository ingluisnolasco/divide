---
import Layout from "../../../../../layouts/Layout.astro";
import Division from "../../../../../components/Division.astro";
import { sePuedeDividir } from "../../../../../lib/division_v3";

const { dividendo, divisor, decimales } = Astro.params;
---

<Layout title="Calculadora de Divisiones">
    <center>
        <h1>Calculadora de Divisiones</h1>
        {
            sePuedeDividir(dividendo, divisor) ? (
                <Division
                    dividendo={dividendo}
                    divisor={divisor}
                    decimales={decimales}
                />
            ) : (
                <h1>Error Tipo M.E.MS.</h1>
            )
        }
