---
import Division from "../../../../../components/Division.astro";
import { sePuedeDividir } from "../../../../../lib/division_v3";

const { dividendo, divisor, decimales } = Astro.params;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Calculadora de Divisiones</title>
    </head>
    <body>
        <br />
        <div class="container">
            <h1>Calculadora de Divisiones</h1>

            <div id="result" class="result">
                {
                    sePuedeDividir(dividendo, divisor) ? (
                        <Division
                            dividendo={dividendo}
                            divisor={divisor}
                            decimales={decimales}
                        />
                    ) : (
                        <h1>Error Tipo M.E.MS.</h1>
                    )
                }
            </div>
            <p>
                <center>Creado por: <b>Luis Antonio Nolasco Gómez</b></center>
            </p>
            <p><center>Todos Los derechos reservados</center></p>
        </div>
    </body>

    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: top;
            margin: 0px;
            background-color: #f4f4f4;
            overflow: auto; /* Permite el scroll en el body */
        }
        .container {
            background: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            /* max-width: 800px; /* Ancho máximo del contenedor */
            width: 100%; /* Asegura que el contenedor ocupe el ancho disponible */
            box-sizing: border-box;
            overflow: hidden; /* Evita el scroll en el contenedor principal */
        }
        h1 {
            margin-bottom: 20px;
            font-size: 1.75em;
            text-align: center;
        }
        form {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }
        input {
            padding: 10px;
            width: 100%;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        button {
            padding: 10px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
            font-size: 1em;
        }
        button:hover {
            background-color: #0056b3;
        }
        .result {
            margin-top: 20px;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #f9f9f9;
            box-sizing: border-box;
        }
        .back-button {
            margin-top: 20px;
            display: block;
            text-align: center;
        }
        .back-button button {
            background-color: #6c757d;
            border-radius: 5px;
        }
        .back-button button:hover {
            background-color: #5a6268;
        }
    </style>
</html>
